{
  "name": "react-ts-monorepo",
  "version": "0.0.0",
  "description": "A React TS starter code",
  "type": "module",
  "private": true,
  "author": "Arpit Malik",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "engines": {
    "node": ">=20.17.0",
    "yarn": ">=1.22.22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arpitmalik832/react-ts-monorepo"
  },
  "scripts": {
    "preinstall": "node -e \"if(process.env.npm_execpath.indexOf('yarn') === -1) throw new Error('You must use Yarn to install dependencies')\"",
    "rm-node_modules": "rimraf node_modules --glob",
    "rm-yarn-lock": "rimraf yarn.lock",
    "clean": "lerna clean -y && yarn rm-yarn-lock && yarn rm-node_modules",
    "serve": "lerna run serve --stream",
    "start": "lerna run start --stream",
    "build": "lerna run build --stream --no-bail",
    "build:beta": "lerna run build:beta --stream --no-bail",
    "build:prod": "lerna run build:prod --stream --no-bail",
    "lint-tsc": "lerna run lint-tsc --stream",
    "lint": "lerna run lint --stream",
    "lint:fix": "lerna run lint:fix --stream",
    "lint-staged": "lerna run lint-staged --concurrency 1",
    "grant-permissions:husky": "chmod +x .husky/*",
    "prepare": "husky install && yarn grant-permissions:husky",
    "commit": "git-cz",
    "test": "lerna run test --stream",
    "test:watch": "lerna run test:watch --stream",
    "test:ss-update": "lerna run test:ss-update --stream",
    "test:coverage": "lerna run test:coverage --stream",
    "test:clearCache": "lerna run test:clearCache --stream",
    "test:watch:quick": "lerna run test:watch:quick --stream",
    "test:watch:inBand": "lerna run test:watch:inBand --stream",
    "test:coverage:silent": "lerna run test:coverage:silent --stream",
    "test:coverage:quick": "lerna run test:coverage:quick --stream",
    "test:coverage:inBand": "lerna run test:coverage:inBand --stream",
    "test:coverage:silent:quick": "lerna run test:coverage:silent:quick --concurrency 1",
    "test:coverage:silent:inBand": "lerna run test:coverage:silent:inBand --stream",
    "e2e-open": "lerna run e2e-open --concurrency 1",
    "e2e-run": "lerna run e2e-run --concurrency 1",
    "e2e-open-all": "lerna run e2e-open-all --stream",
    "e2e-run-all": "lerna run e2e-run-all --stream",
    "knip": "lerna run knip --stream",
    "knip:debug": "lerna run knip:debug --stream",
    "knip:check-files": "lerna run knip:check-files --stream",
    "knip:w/o-devDependencies": "lerna run knip:w/o-devDependencies --stream",
    "knip:prod": "lerna run knip:prod --stream",
    "knip:prod:check-files": "lerna run knip:prod:check-files --stream",
    "storybook": "lerna run storybook --stream",
    "storybook:build": "lerna run storybook:build --stream",
    "storybook:build:beta": "lerna run storybook:build:beta --stream",
    "storybook:build:prod": "lerna run storybook:build:prod --stream",
    "storybook:serve": "lerna run storybook:serve --stream",
    "version-bump": "lerna version",
    "version-bump:major": "lerna version major --yes",
    "version-bump:minor": "lerna version minor --yes",
    "version-bump:patch": "lerna version patch --yes",
    "version-bump:alpha": "lerna version prerelease --preid alpha --yes",
    "version-bump:beta": "lerna version prerelease --preid beta --yes",
    "version-bump:rc": "lerna version prerelease --preid rc --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "husky": "^9.1.6",
    "lerna": "^8.1.8",
    "rimraf": "^6.0.1",
    "validate-branch-name": "^1.3.1"
  }
}
